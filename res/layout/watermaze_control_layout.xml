<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1.0"
    android:baselineAligned="false" >

	<GridLayout 
	    android:id="@+id/watermaze_control_layout"
	    android:layout_weight=".5"
	    android:layout_height="wrap_content"
	    android:layout_width="0dip"
	    android:columnCount="2"
	    android:orientation="vertical" >
	
	    <Button
	        android:id="@+id/loadGeometry"
	        android:layout_column="0"
	        android:layout_gravity="left|top"
	        android:layout_row="0"
	        android:text="@string/load_geometry" />
	
	    <Button
	        android:id="@+id/nextParadigm"
	        android:layout_column="0"
	        android:layout_gravity="left|top"
	        android:layout_row="1"
	        android:minWidth="@dimen/activity_horizontal_margin"
	        android:text="@string/next_paradigm" />
	
	    <Button
	        android:id="@+id/previousParadigm"
	        android:layout_width="wrap_content"
	        android:layout_column="0"
	        android:layout_gravity="left|top"
	        android:layout_row="2"
	        android:text="@string/prev_paradigm" />
	
	    <Button
	        android:id="@+id/endExperiment"
	        android:layout_column="1"
	        android:layout_gravity="left|top"
	        android:layout_row="1"
	        android:text="@string/end_experiment" />
	
	    <Button
	        android:id="@+id/startStop"
	        android:layout_column="1"
	        android:layout_gravity="left|top"
	        android:layout_row="0"
	        android:text="@string/start" />
	
	    <Button
	        android:id="@+id/nextTrial"
	        android:layout_column="1"
	        android:layout_gravity="left|top"
	        android:layout_row="2"
	        android:text="@string/next_trial" />
	
	    <Button
	        android:id="@+id/addTrial"
	        android:layout_column="0"
	        android:layout_gravity="left|top"
	        android:layout_row="3"
	        android:text="@string/add_trial" />

	    <Button
	        android:id="@+id/newSubject"
	        android:layout_column="1"
	        android:layout_gravity="left|top"
	        android:layout_row="3"
	        android:text="@string/new_subject" />
	
	</GridLayout>

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight=".5" >

	    <LinearLayout
	        android:id="@+id/watermaze_control_cue_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    </LinearLayout>
	</ScrollView>
</LinearLayout>